<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="dieKlingel.Pages.Connect"
             xmlns:local="clr-namespace:dieKlingel.Controls"
             Title="Verbinden">
    <ContentPage.Content>
        <StackLayout>
            <local:Finder 
                x:Name="Finder"
                VerticalOptions="Fill"/>
            <Button 
                x:Name="BtnSearch" 
                Clicked="BtnSearch_Clicked"
                Text="Basis Suchen"
                VerticalOptions="EndAndExpand"
                Margin="10"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>